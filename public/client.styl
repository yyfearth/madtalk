* // clear
  padding 0
  margin 0

body, #entry
  background #22252a
  color #eee

body, table
  font-family 'DejaVu Sans Mono', fixed
  font-size 14pt
  line-height 150%

table, tr, td
  outline-width 0
  border-width 0

table
  border-collapse collapse
  border-spacing 0

a
  text-decoration none
  color #888
  &:hover
    text-decoration underline
    color #aaa

#loading, #connect
  background #22252a
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 1em

#loading
  z-index 10000000

#connect
  z-index 10000001

#loading p, #connect fieldset
  //font-family 'DejaVu Sans Mono', fixed
  width 30em
  border 0

#toolbar
  position fixed
  color #fff
  width 100%
  bottom 0
  background #733
  ul
    margin-left 1em
    list-style none
    li
      display inline-block
      margin 0 2em 0 0
  textarea
    display block
    width 100%
    font-size inherit
    padding 1em
    border-width 0
    outline none
    clear both

#log
  padding-bottom 10em // default
  background inherit
  overflow hidden
  li
    margin default


// not very important info
.notice td, .join td, .part td, .message .date
  color #555
.error td
  color #933
.personal .nick, .notice .nick
  color #cd5
.message
  margin 0.1em 0
  td
    vertical-align top

.nick
  font-weight bold
  padding 0 1em 0 0.5em
  a
    color inherit

#users-list
  color inherit
