#panel
  position absolute
  width 100%
  top auto
  bottom 0
  box-sizing border-box
  no-space()
  background rgba($bkg-color, 0.8)
  opacity 0.99 // smooth font
  //max-height 50% // by js
  ul // #status
    color #fff
    no-space()
    padding-left 1em
    list-style none
    box-sizing border-box
    box-shadow(0 -0.3em 1em rgba(#0005))
    transition(all 0.3s ease-in-out)
    background rgba(#7333)
    &:hover
      background rgba(#7339)
    li
      display inline-block
      margin 0 2em 0 0
  textarea
    display block
    font-size inherit
    border-width 0
    outline none
    clear both
    resize none
    width 100%
    box-sizing border-box
    margin 0
    padding 1em
    min-height 3em // inc padding
    color $font-color
    transition(background-color 0.1s ease-in-out)
    background-color rgba($bkg-color, 0.5)
    &:hover, &:focus
      background-color $bkg-color

  #users-list
    color inherit
