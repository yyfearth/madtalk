#msglog
  display block
  position absolute
  left 0
  right 0
  top 0
  bottom 10em // default
  margin 0
  padding 0.5em
  background transparent
  overflow auto
  // overflow hidden
  // overflow-y auto

  info-width = 6.5em
  > li
    position relative
    display block
    list-style-type none
    no-space()
    border-radius 0.3em
    background-color lighten($bkg-color, 2%)
    opacity 0.88
    &:nth-child(even)
      background-color lighten($bkg-color, 3%)
    &:hover
      opacity 0.99
      background-color lighten($bkg-color, 10%)
    &.unread
      opacity 0.77
      background-color lighten($bkg-color, 15%)
    > .info
      position absolute
      font-size 14px
      line-height 16px
      display inline-block
      text-align center
      vertical-align top
      width info-width
      color darken($font-color, 25%)
      padding 0.3em
      .nick, .ts
        display block
        text-align center
      .nick
        color #cd5
        font-weight bold
        min-height 0.5em
    > .data
      position relative
      margin 0
      margin-left 6em
      padding 0.1em 0.5em
      vertical-align top
      min-height 2em
      border-left 1px dashed #444
      overflow hidden
      @import 'msgview'
      msgview()
    // data color
    &.message > .data
      color #fff
    &.system > .data
      color #555
    &.offline > .data
        color #555
        font-style italic
    //.error > .data
    //  color #933

.transition #msglog > li
  transition(all 0.3s ease-in-out 30ms)

.transition.fast #msglog > li
  transition(all 0.3s ease-in-out 0.1s)
