
// vars
$bkg-color = #22252a
$font-color = #eee

// mixins
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args
vendor-all(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

// @import 'nib' set in compiler instead

transitions() // delay 0
  vendor-all('transition', arguments)

no-space()
  padding 0
  margin 0

body
  background $bkg-color
  color $font-color
  font-family 'DejaVu Sans Mono', fixed
  font-size 14pt
  line-height 150%
  no-space()
  background -webkit-radial-gradient(black 15%, transparent 16%) 0 0, -webkit-radial-gradient(black 15%, transparent 16%) 8px 8px, -webkit-radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 0 1px, -webkit-radial-gradient(rgba(255,255,255,.1) 15%, transparent 20%) 8px 9px
  background-size 16px 16px
  background-color $bkg-color

#app
  position fixed
  width 100%
  height 100%
  > *
    height 100%

a
  text-decoration none
  color #888
  &:hover
    text-decoration underline
    color #aaa

#loading, #connect
  background #22252a
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 1em

@import 'login'
@import 'msglog'
@import 'panel'
