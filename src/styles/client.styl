
// vars
$bkg-color = #22252a
$font-color = #eee

// mixins
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args
vendor-all(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

transitions() // delay 0
  vendor-all('transition', arguments)

no-space()
  padding 0
  margin 0

body
  background $bkg-color
  color $font-color
  font-family 'DejaVu Sans Mono', fixed
  font-size 14pt
  line-height 150%
  no-space()

a
  text-decoration none
  color #888
  &:hover
    text-decoration underline
    color #aaa

#loading, #connect
  background #22252a
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 1em

@import 'login'
@import 'log'
@import 'panel'
